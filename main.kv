
<MyLayout>:
    orientation:'vertical'
    padding:(36,36)
    id:bl
    MDRectangleFlatButton:
        text:'Buildozer在线打包工具'
        size_hint:1,0.4
    Label:
        size_hint_y:0.15
    MDTextField:
        id:project
        size_hint_y:0.4
        hint_text:'项目路径(包含main.py)'
        text:'/sdcard/qpython/projects/KivySample'
    BoxLayout:
        orientation:'horizontal'  
        size_hint:1,0.4   
        MDTextField:
            id:title
            hint_text:'app名称'
            text:'My Application'        
        MDTextField:
            id:fullscreen
            hint_text:'覆盖通知栏'
            text:'False'
       
    BoxLayout:
        orientation:'horizontal'
        size_hint:1,0.4
        MDTextField:
            id:package
            hint_text:'app包名'
            text:'org.test.myapp'        
        MDTextField:
            id:version
            hint_text:'app版本'    
            text:'0.1'
            
    BoxLayout:
        orientation:'horizontal' 
        size_hint:1,0.4       
        MDTextField:
            id:pyver
            hint_text:'编译版本'  
            text:'arm64-v8a'                
        MDTextField:
            id:orientation
            hint_text:'屏幕方向'    
            text:'portrait'
              
    MDTextField:
        id:requirements
        size_hint_y:0.4
        hint_text:'编译依赖'
        text:'python3,kivy'
    MDTextField:
        id:permissions
        size_hint_y:0.4
        hint_text:'app权限'
        text:'INTERNET,WRITE_EXTERNAL_STORAGE'
    MDTextField:
        id:email
        size_hint_y:0.4
        hint_text:'接收邮箱'
    MDRaisedButton:
        id:button
        text:
            '提交打包任务'
        size_hint:1,0.4
        on_press:button.text='上传中...'
        on_release:
            root.start()
    MDLabel:
    
        
    
    
